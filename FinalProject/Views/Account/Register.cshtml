@model RegisterVM

<!-- Register start -->
<div class="register-area pt-150 pb-150">
    <div class="container">
        <div class="row">
            <div class="col-md-6 col-md-offset-3 text-center">
                <div class="login">
                    <div class="login-form-container">
                        <div class="login-text">
                            <h2>sign up</h2>
                            <span>Please login using account detail bellow.</span>
                        </div>
                        <div class="login-form">
                            <div asp-validation-summary="ModelOnly"></div>
                            <form method="post">
                                <input asp-for="@Model.FirstName" placeholder="First Name">
                                <span asp-validation-for="@Model.FirstName"></span>

                                <input asp-for="@Model.LastName" placeholder="Last Name">
                                <span asp-validation-for="@Model.LastName"></span>

                                <input asp-for="@Model.Username" placeholder="Username">
                                <span asp-validation-for="@Model.Username"></span>

                                <input asp-for="@Model.Email" placeholder="Email">
                                <span asp-validation-for="@Model.Email"></span>

                                <input asp-for="@Model.Password" placeholder="Password">
                                <span asp-validation-for="@Model.Password"></span>

                                <input asp-for="@Model.RepeatPassword" placeholder="Confirm password">
                                <span asp-validation-for="@Model.RepeatPassword"></span>
                                <div class="button-box">
                                    <div class="login-toggle-btn">
                                        <a href="#">Forgot Password?</a>
                                    </div>
                                    <button type="submit" class="default-btn">sign up</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Register end --> 