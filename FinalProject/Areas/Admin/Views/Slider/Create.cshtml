@model Slider

<div class="card">
    <div class="card-body">
        <h4 class="card-title">Basic form elements</h4>
        <p class="card-description">
            Basic form elements
        </p>
        <form class="forms-sample" method="post" enctype="multipart/form-data">
            <div class="form-group">
                <label asp-for="@Model.Title">Name</label>
                <input type="text" class="form-control" asp-for="@Model.Title" placeholder="Name">
                <span asp-validation-for="@Model.Title"></span>
            </div>

            <div class="form-group">
                <label>File upload</label>
                <div class="input-group col-xs-12">
                    <input asp-for="@Model.Photo" class="form-control file-upload-info"  placeholder="Upload Image">
                    <span asp-validation-for="@Model.Photo"></span>
                </div>
            </div>

            <div class="form-group">
                <label asp-for="@Model.Description">Description</label>
                <textarea class="form-control" asp-for="@Model.Description" rows="4"></textarea>
                <span asp-validation-for="@Model.Description"></span>
            </div>
            <button type="submit" class="btn btn-primary mr-2">Submit</button>
            <button class="btn btn-light">Cancel</button>
        </form>
    </div>
</div>